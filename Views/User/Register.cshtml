@model Forum_RP.Models.User

@{
    ViewData["Title"] = "Rejestracja";
}

<form asp-action="Register" method="post">
    <div class="form-horizontal">
        <h4>Rejestracja</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserName" class="control-label">Nazwa użytkownika</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Hasło</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ConfirmPassword" class="control-label">Powtórz Hasło</label>
            <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Zarejestruj się" class="btn btn-primary" />
        </div>
    </div>
</form>